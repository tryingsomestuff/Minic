#!/bin/bash
ulimit -s unlimited

export CXX=g++
export CC=gcc

source $(dirname $0)/common
cd_root

FATHOM_PRESENT=0
if [ -e Fathom/src/tbprobe.h ]; then
   FATHOM_PRESENT=1
   echo "found Fathom lib, trying to build"
   $(dirname $0)/buildFathom.sh "$@"
fi

do_title "Building Minic for Linux perf"

OPT="-g -O3 -DNDEBUG -ggdb -flto --std=c++17"

if [ $FATHOM_PRESENT = "1" ]; then
   lib=fathom_dev_linux_x64.o
   OPT="$OPT $dir/Fathom/src/$lib -I$dir/Fathom/src"
fi

rm -rf minic.perf

g++ $STANDARDSOURCE -ISource -ISource/nnue $OPT -lpthread -DDEBUG_TOOL -o minic.perf
perf record -g -- ./minic.perf -analyze "r1bqkb1r/pp3ppp/1np1pn2/6N1/2BP4/8/PPP1QPPP/R1B1K1NR w KQkq - 1 1" 15
#perf record -g -- ./minic.perf -perft "start" 6 -quiet 0
#perf record -g -- ./minic.perf -evalSpeed Book_and_Test/Tuning/lichess-new-labeled.epd
perf report minic.perf
